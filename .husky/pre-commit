#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Pre-commit Quality Gates
# Enforces quality standards before allowing commits
# See ADR-011 for rationale

echo "ğŸ” Running pre-commit quality gates..."

# 1. TypeScript type checking
echo "  â†’ TypeScript type check..."
npm run type-check
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript errors found. Fix them before committing."
  exit 1
fi

# 2. ESLint with auto-fix
echo "  â†’ ESLint validation..."
npm run lint
if [ $? -ne 0 ]; then
  echo "âŒ ESLint errors found. Fix them before committing."
  exit 1
fi

# 3. Prettier formatting
echo "  â†’ Prettier formatting check..."
npm run prettier:check
if [ $? -ne 0 ]; then
  echo "âŒ Formatting issues found. Run 'npm run prettier' to fix."
  exit 1
fi

echo "âœ… All quality gates passed!"
